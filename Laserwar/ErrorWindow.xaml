<Window x:Class="Laserwar.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laserwar"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Title="ErrorWindow" Height="250" Width="400">
    <Grid>
        <Label Content="ПРОИЗОШЛА ОШИБКА" FontSize="22" FontWeight="Bold" Margin="30,20,0,0" />
        <Label x:Name="ErrorLabel" Content="Ошибка" FontSize="14" Margin="30,80,0,0"/>
        <Button Content="Закрыть" Margin="220,180,20,20" Background="Blue" Foreground="White" FontSize="16" Click="Button_Click"/>
    </Grid>
</Window>
